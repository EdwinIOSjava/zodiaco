<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:gravity="center_horizontal"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="40dp">
    <ImageView
        android:id="@+id/iconImageView"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/aries_icon"
    />
    <TextView
        android:id="@+id/nombreSigno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Aries :"
        android:textColor="@color/Font1white"
        android:textSize="30dp"
        android:fontFamily="sans-serif-smallcaps"
        >

    </TextView>

    <TextView
        android:id="@+id/fechaSigno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="junio 20 - abril 18 :"
        android:textColor="@color/Font1white"
        android:textSize="15sp"
        android:fontFamily="monospace"
        android:layout_marginTop="20dp"
        >

    </TextView>


    <TextView
        android:id="@+id/contenidoSigno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdkasuygdhjaskduhansdkuhjbasdasgujhdbsadjhbasduyhjbaskdhjbnasdhausjdbsauhdjbaskudhjbaskudhjbas"
        android:textColor="@color/Font1white"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:padding="20sp"
        android:layout_marginTop="20dp"

        >

    </TextView>


</LinearLayout>